<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OnBoardingThird">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_onboarding">

        <ImageView
            android:layout_width="@dimen/onb_img"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/illustrations3"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/bg_text_onb"
            android:padding="20dp">

            <TextView
                android:layout_weight="1"
                android:id="@+id/title_t_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onb_t_5"
                android:textSize="24sp"
                android:textAlignment="center"
                android:fontFamily="@font/inter_28pt_bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/text_t_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onb_t_6"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/text_onb"
                android:fontFamily="@font/inter_28pt_regular"/>

            <ImageView
                android:layout_weight="2"
                android:id="@+id/ind_t_1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sliders3"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_get_started"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_started"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/btn_style"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>