<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Верхняя панель с кнопками -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"/>


        <TextView
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:paddingEnd="40dp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

    <!-- Поле ввода Email -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email получателя"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp"/>

    <!-- Поле ввода Темы -->
    <EditText
        android:id="@+id/et_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Тема письма"
        android:layout_marginTop="8dp"/>

    <!-- Поле ввода Текста письма -->
    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Текст сообщения..."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        android:layout_marginTop="8dp"/>

    <!-- Кнопка прикрепления файла -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_attach"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/file_attach"
            android:textAllCaps="false"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/tv_attached_file"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/file_not_attached"
            android:textColor="#666"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
</LinearLayout>