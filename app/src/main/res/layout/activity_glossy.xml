<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GlossyActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/glossy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/title_text_glossy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_28pt_bold"
        android:textColor="#240F51"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_content_glossy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title_text_glossy"
        app:layout_constraintEnd_toEndOf="@id/title_text_glossy"
        app:layout_constraintTop_toBottomOf="@id/title_text_glossy"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_28pt_medium"
        android:textColor="#240F51"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_top_up_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/btn_style"
        android:textAllCaps="false"
        android:text="@string/Continue"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_28pt_semibold"/>

</androidx.constraintlayout.widget.ConstraintLayout>