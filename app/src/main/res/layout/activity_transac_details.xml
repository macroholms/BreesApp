<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TransacDetailsActivity">

    <TextView
        android:id="@+id/title_transactions_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transactions_details"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_28pt_regular"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_btn_img"
        android:backgroundTint="@color/transperent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/transaction_icon"
        app:layout_constraintTop_toBottomOf="@id/title_transactions_details"
        app:layout_constraintStart_toStartOf="@id/title_transactions_details"
        app:layout_constraintEnd_toEndOf="@id/title_transactions_details"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/title_transac_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_icon"
        app:layout_constraintStart_toStartOf="@id/image_icon"
        app:layout_constraintEnd_toEndOf="@id/image_icon"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_28pt_semibold"
        android:textSize="16sp"
        android:textColor="#111827"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_transac_details"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/searchview_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp">

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_28pt_regular"
            android:text="@string/amount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_28pt_regular"
            android:text="@string/date"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/amount"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_28pt_regular"
            android:text="@string/time"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/amountInp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_28pt_regular"
            android:textColor="#121826"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/dateInp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_28pt_regular"
            android:textColor="#121826"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/amountInp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/timeInp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_28pt_regular"
            android:textColor="#121826"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/dateInp"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>