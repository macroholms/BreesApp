<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/topic_element_bg"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/title_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#263154"
        android:text=""
        android:fontFamily="@font/inter_28pt_semibold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/content_topic"
        android:layout_width="243dp"
        android:layout_height="72dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#3E4968"
        android:fontFamily="@font/inter_28pt_regular"
        android:text=""/>

    <Button
        android:id="@+id/view_topic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TransparentButton"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_28pt_semibold"
        android:text="@string/view_topic"
        android:textColor="@color/main"/>

</LinearLayout>